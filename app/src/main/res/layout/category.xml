        <LinearLayout
            android:id="@+id/banner_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            tools:layout_editor_absoluteX="10dp" />



    </RelativeLayout>


</RelativeLayout>