<?xml version="1.0" encoding="utf-8"?>

<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/common_google_signin_btn_text_dark_default">
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@color/common_google_signin_btn_text_dark_default" />
            <corners android:radius="15dp" />
        </shape>
    </item>

    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:endColor="@color/white"
                android:startColor="@color/design_default_color_primary_dark"
                android:type="linear" />
            <corners android:radius="@dimen/cardview_default_radius" />
        </shape>
    </item>
</ripple>